<!DOCTYPE html>
<html lang="en">
  <% include header %>

  <body>
    <% include navbar %>

    <div role="main" class="container" style="width: 50%;">
      <br /><br />

      <h2><%= message %></h2>
      <form action="/process" method="post">
        <div class="form-group">
          <div class="mb-2">
            <label class="block font-bold mb-2" for="firstName">First Name</label>
            <input type="text" class="form-control" id="firstName" name="firstName" placeholder="Soliman" required/>
          </div>
          <div class="mb-2">
            <label class="block font-bold mb-2" for="lastName">First Name</label>
            <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Abdelmalak" required/>
          </div>
        </div>
      
        <div class="form-group">
          <!-- CSRF token -->
          <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
      
          <button type="submit" class="btn btn-secondary float-right">
            Submit
          </button>
        </div>
      </form>
      <br /><br />

      <a href="/">Return to Employee</a>
    </div>

    <% include scripts %>
  </body>
  <% include footer %>
